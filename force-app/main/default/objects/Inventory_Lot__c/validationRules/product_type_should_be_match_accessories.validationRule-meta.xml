<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>product_type_should_be_match_accessories</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
OR(
ISPICKVAL(Type__c, &quot;Parts&quot;),
ISPICKVAL(Type__c, &quot;Vehicle&quot;)


	

),
ISPICKVAL(Product__r.Type__c , &quot;Accessories&quot;)
)</errorConditionFormula>
    <errorDisplayField>Type__c</errorDisplayField>
    <errorMessage>Product Type should be accessories</errorMessage>
</ValidationRule>
