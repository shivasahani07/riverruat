<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_Status_is_Dispatched_LR_Number_Mandat</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Dispatched&quot;),
    ISBLANK(LR_Number__c)
)</errorConditionFormula>
    <errorDisplayField>LR_Number__c</errorDisplayField>
    <errorMessage>Fill &apos;LR Number&apos; if status is Dispatched</errorMessage>
</ValidationRule>
