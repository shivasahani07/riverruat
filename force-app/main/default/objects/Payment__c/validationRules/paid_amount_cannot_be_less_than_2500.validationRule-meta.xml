<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>paid_amount_cannot_be_less_than_2500</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    Enquiry__r.Order__r.Record_Type_Name__c = &quot;Vehicle&quot;,
    NOT(ISBLANK(Enquiry__c)),
    Amount__c &lt;= 2500  
)</errorConditionFormula>
    <errorMessage>Initial Amount Should be Greater than 2500</errorMessage>
</ValidationRule>
