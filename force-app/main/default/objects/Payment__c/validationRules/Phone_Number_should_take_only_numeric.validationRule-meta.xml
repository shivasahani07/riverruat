<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Number_should_take_only_numeric</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Phone__c , &quot;^[0-9]*$&quot;))</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>&quot;Phone number must contain only numerical digits (0-9). Please remove any non-numeric characters.&quot;</errorMessage>
</ValidationRule>
