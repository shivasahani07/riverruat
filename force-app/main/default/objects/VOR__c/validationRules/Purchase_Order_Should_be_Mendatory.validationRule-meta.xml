<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Purchase_Order_Should_be_Mendatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(VOR_Reason__c, &apos;Awaiting Parts&apos;),
    ISBLANK(Purchase_Order__c)
)</errorConditionFormula>
    <errorMessage>Purchase Order is required when VOR Reason is &apos;Awaiting Parts&apos; .</errorMessage>
</ValidationRule>
