<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Amount</fullName>
    <active>true</active>
    <errorConditionFormula>Amount__c &gt; (Work_Order__r.Estimation_Bill__c -  Work_Order__r.Total_Amount_Paid__c )</errorConditionFormula>
