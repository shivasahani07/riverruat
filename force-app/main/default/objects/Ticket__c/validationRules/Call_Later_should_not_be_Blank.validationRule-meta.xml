<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Call_Later_should_not_be_Blank</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Call Later&quot;),
    ISBLANK(Call_Later_Date__c)
)</errorConditionFormula>
    <errorDisplayField>Call_Later_Date__c</errorDisplayField>
    <errorMessage>Call Later Date must be filled in when Status is &apos;Call Later&apos;.</errorMessage>
</ValidationRule>
