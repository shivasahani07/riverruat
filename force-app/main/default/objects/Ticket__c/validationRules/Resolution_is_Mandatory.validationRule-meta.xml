<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Resolution_is_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Closed&quot;),
    LEN(TRIM(Resolution__c)) = 0,
    $RecordType.DeveloperName = &quot;Technical_Ticket&quot;
)</errorConditionFormula>
    <errorDisplayField>Resolution__c</errorDisplayField>
    <errorMessage>Resolution is mandatory when Status is Closed for Technical Tickets.</errorMessage>
</ValidationRule>
